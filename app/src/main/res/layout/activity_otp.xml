<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:text="Verify your mobile number You will Recieve an"
        android:textColor="#0E0953"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_above="@+id/tvOtp"/>

    <TextView
        android:id="@+id/tvOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="OTP"
        android:layout_above="@+id/ll1"
        android:textColor="#22D1DCDB"
        android:textSize="40dp"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvResend"
        android:orientation="horizontal"
        >

        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:id="@+id/etOtp1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/rectangle2" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:id="@+id/etOtp2"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/rectangle2" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:id="@+id/etOtp3"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/rectangle2" />

        <EditText
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:id="@+id/etOtp4"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/rectangle2" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll2"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="RESEND OTP?"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSumbit"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:padding="20dp"
            android:text="VIA SMS"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:padding="20dp"
            android:text="VIA CALL"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnSumbit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#36A4DF"
        android:padding="20dp"
        android:text="Sumbit"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>