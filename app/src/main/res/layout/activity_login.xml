<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPhone"
        android:layout_alignParentStart="true"
        android:text="Lets Start With Your"
        android:textColor="#0E0953"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/etEnter"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Phone/Email"
        android:textColor="#0E0953"
        android:textSize="40dp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/etEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGet"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="277dp"
        android:background="@drawable/rectangle2"
        android:paddingTop="15dp"
        android:inputType="number"
        android:paddingBottom="15dp"
        android:hint=" Enter phone number/email id" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#36A4DF"
        android:padding="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="GET OTP" />

</RelativeLayout>