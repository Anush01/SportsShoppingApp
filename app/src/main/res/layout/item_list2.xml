<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivShoe1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sssssss" />


        <LinearLayout
            android:id="@+id/ll11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivShoe1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivShoe1"
                android:background="@drawable/yellow_rectangle"
                android:text="599"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMrp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivShoe1"
                    android:text="MRP"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tvMrpPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivShoe1"
                    android:text="899"
                    android:textSize="12dp" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tvDescrition1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll11"
            android:text="Description" />

        <TextView
            android:id="@+id/tvRating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescrition1"
            android:layout_marginBottom="10dp"
            android:background="@drawable/small_rectangle"
            android:drawableEnd="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="5dp"
            android:text="4.5/5"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
