<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account_Activity2"
    android:background="#bfc1c2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bfc1c2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f3f4">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_shopping_cart_24"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:background="@drawable/square"
                />

            <ImageView
                android:layout_margin="20dp"
                android:padding="20dp"
                android:id="@+id/ivperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cartig1"
                android:background="@drawable/square"/>

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:id="@+id/abtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivperson"
                android:background="@color/white"
                android:text="Prachi Pardeshi"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abtn"
                android:layout_toEndOf="@+id/ivperson"
                android:text="9767976210"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="127dp"
                tools:layout_editor_absoluteY="81dp" />
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/ivprofile"
                android:layout_below="@id/ivperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person"
                android:layout_margin="20dp"
                android:background="@drawable/square"/>
            <ImageView
                android:adjustViewBounds="true"
                android:layout_below="@id/ivprofile"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address"
                android:background="@drawable/square"
        />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/ivperson"
                android:adjustViewBounds="true"
                android:background="@drawable/square"
                android:src="@drawable/cart" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>